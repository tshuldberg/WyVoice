{
  "name": "wyvoice",
  "version": "0.1.1",
  "description": "Privacy-first Windows dictation app. Use a customizable hotkey to dictate anywhere.",
  "main": "dist/main/index.js",
  "scripts": {
    "build:ts": "tsc",
    "build": "npm run build:ts",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "package": "electron-builder --win",
    "release:win": "electron-builder --win --publish always",
    "test": "npm run build:ts && node --test tests/*.test.mjs"
  },
  "author": "Trey Shuldberg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tshuldberg/WyVoice.git"
  },
  "homepage": "https://github.com/tshuldberg/WyVoice",
  "bugs": {
    "url": "https://github.com/tshuldberg/WyVoice/issues"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-global-key-listener": "^0.3.0"
  }
}
